<div class="mt-4">
    <div class="row">
        {{#each flowers}}
            <div class="col-sm-6 col-md-4">
                <div class="card card-flower-item">
                    <a href="/flowers/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                    </a>
                    <div class="card-body">
                        <a href="/flowers/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">{{this.stocks}}</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div> 